<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
        <ImageView
            android:id="@id/drag_handle"
            android:background="@drawable/ic_drag_queue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            android:layout_weight="0"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_variable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valor"
            android:ellipsize="end"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/tv_nom_variable" android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_nom_variable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nombreVariable"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignTop="@id/drag_handle" android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>
