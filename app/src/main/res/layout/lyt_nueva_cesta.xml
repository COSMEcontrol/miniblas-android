<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/customTitleDialog"
        android:textColor="#80000000"
        android:text="@string/nombre_cesta" />

    <EditText
        android:id="@+id/et_nombre_cesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/customEntryDialog" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/customTitleDialog"
        android:textColor="#80000000"
        android:text="@string/periodo_refresco" />

    <EditText
        android:id="@+id/et_periodo_refresco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="@dimen/customEntryDialog"/>
 
</LinearLayout>