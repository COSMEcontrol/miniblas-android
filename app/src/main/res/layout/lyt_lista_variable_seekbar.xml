<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/drag_handle"
        android:background="@drawable/ic_drag_queue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/tv_nom_variable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/drag_handle"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/tv_nom_variable"
        android:indeterminate="false"
        android:layout_alignLeft="@+id/tv_nom_variable"
        android:layout_alignStart="@+id/tv_nom_variable"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
