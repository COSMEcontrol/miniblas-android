<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

    <ImageView
        android:id="@id/drag_handle"
        android:background="@drawable/ic_drag_queue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_weight="0"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:orientation="vertical" >

        <com.miniblas.views.RoundedLetterView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mRoundedLetterView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            app:titleSize="35dp"
            />

        <TextView
            android:id="@+id/tv_nom_cesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true" android:layout_toRightOf="@+id/mRoundedLetterView"
            android:layout_toEndOf="@+id/mRoundedLetterView" android:layout_marginTop="12dp"/>

    </RelativeLayout>

</RelativeLayout>