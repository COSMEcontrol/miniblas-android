<resources>

    <style name="MiniblasMaterialDesing" parent="@style/miniBlasParent" />

    <style name="MiniblasBasic" parent="@style/miniBlasDarkParent" />

    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="PopupMenuListViewDark" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">@color/dark_theme_gray_darker</item>

    </style>

    <style name="miniBlasToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/actionBar_color</item>
        <item name="android:textColor">?attr/menuText_color</item>
   </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/dark_theme_gray_darker</item>
    </style>

</resources>