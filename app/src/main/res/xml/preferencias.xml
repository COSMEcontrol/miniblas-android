<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.miniblas.views.MiniblasPreferenceCategory android:title="@string/ajustesPorDefecto">
        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:key="porPref"
            android:summary="@string/cambiarPuertoPorDefecto"
            android:defaultValue="@string/puertoPrecargado"
			android:title="@string/port"
			android:inputType="number"
            android:layout="@layout/preference_custom"/>
        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:key="passPref"
            android:summary="@string/cambiarPasswordPorDefecto"
            android:defaultValue="GTA70"
			android:title="Password"
            android:password="true"
            android:layout="@layout/preference_custom"/>
    </com.miniblas.views.MiniblasPreferenceCategory>
    <com.miniblas.views.MiniblasPreferenceCategory android:title="@string/perfilDeAutoconexion">
        <com.afollestad.materialdialogs.prefs.MaterialListPreference
            android:key="@string/profilePref"
            android:defaultValue="0"
            android:summary="@string/profilePrefDescrition"
            android:title="@string/perfil"
            android:layout="@layout/preference_custom"/>

    </com.miniblas.views.MiniblasPreferenceCategory>
    <com.miniblas.views.MiniblasPreferenceCategory android:title="@string/iu">

        <CheckBoxPreference
            android:key="PREF_TERMINAL"
            android:title="@string/terminalViewPreference"
            android:summary="@string/summaryTerminalPref"
            android:layout="@layout/preference_custom"
            android:persistent="true"
            android:defaultValue="false" />

        <Preference
            android:key="@string/themePref"
            android:title="@string/themeTitle"
            android:summary="@string/themePrefDescrition"
            android:persistent="false"
            android:layout="@layout/preference_custom" />


        <com.miniblas.views.MiniblasPreference
            android:key="primary_color"
            android:title="@string/primaryColor"
            android:summary="@string/primaryColorDesc" />

        <com.miniblas.views.MiniblasPreference
            android:key="accent_color"
            android:title="@string/accentColor"
            android:summary="@string/accentColorDesc" />

        <CheckBoxPreference
            android:key="colored_navbar"
            android:title="@string/coloredNavbar"
            android:summary="@string/coloredNavbarDesc"
            android:layout="@layout/preference_custom"
            android:persistent="true"
            android:defaultValue="true" />

    </com.miniblas.views.MiniblasPreferenceCategory>
</PreferenceScreen>